---
interface Props {
	title: string;
	description: string;
	imgUrl:string
}

import { Image } from 'astro:assets';

const {  title, description,imgUrl } = Astro.props;
---

<div class="link-card">
	<div class="image">
		<img src={imgUrl} alt="">

		<!-- <Image alt="" src={imgUrl} /> -->
	</div>

	<div class="inContent">
		<h2>
			{title}
		</h2>
		<p>
			{description}
		</p>
	</div>

</div>
<style>

	.image{
		position: relative;
		width: 320px;
		height: 250px;
		margin-top: 10px;
		border-radius: 25px 25px 25px 25px;
	}

	.image img{
		width: 320px;
		height: 250px;
	}

	.link-card {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 25px 25px 25px 25px;	
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		width: 340px;
		height: auto;
		margin-right: 20px;
	}

	.inContent{
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		width: 100%;
		height: auto;
		margin-top: 15px;
	}

	.inContent h2{
		margin-bottom: 15px;
	}
	h2 {
		margin: 0;
		font-size: 2.3rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		color: white;
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 15px;
		margin-left: 7px;
		font-size: 1.1rem;
		color: white;
	}
	/* .link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	} */
</style>
