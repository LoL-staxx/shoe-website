---
import Card from "../Card.astro";
import Shoe_3 from "../../asset/shoe3.webp";
---

<section class="shoesSec">
  <div class="txt">
    <h3>Shoe</h3>
  </div>

  <div class="shoeCards">
    <div class="cardContainer1">
      <Card
        imgUrl={Shoe_3.src}
        title="Fancy shoe"
        description="hello this is a fancy huge text, i cant write in english but i will try my best to improve the most i can"
      />
    </div>

    <div class="cardContainer2">
      <Card
        imgUrl={Shoe_3.src}
        title="Fancy shoe"
        description="hello this is a fancy huge text, i cant write in english but i will try my best to improve the most i can"
      />
    </div>

    <div class="cardContainer3">
      <Card
        imgUrl={Shoe_3.src}
        title="Fancy shoe"
        description="hello this is a fancy huge text, i cant write in english but i will try my best to improve the most i can"
      />
    </div>
  </div>
</section>

<style>
  .shoesSec {
    position: relative;
    width: 100%;
    height: 100vh;
    background-color: #050505;
    /* background-color: black; */
    border-top-left-radius: 30px;
    border-top-right-radius: 30px;
    overflow-x: hidden;
  }

  .txt {
    width: 100%;
    /* background-color: aqua; */
    padding-top: 3em;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .txt h3 {
    font-size: 3em;
    color: white;
  }

  .shoeCards {
    position: relative;
    width: 100vw;
    margin-top: 3em;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .shoeCards Card {
    padding-right: 15px;
  }
</style>

<script>
  import { gsap } from "gsap/gsap-core";
  import { ScrollTrigger } from "gsap/all";

  gsap.registerPlugin(ScrollTrigger);

  var tl = gsap.timeline({
    scrollTrigger: {
      trigger: ".shoesSec",
      start: "25% 90%",
      end: "top top",
      scrub: true,
    },
  });

  tl.from(".cardContainer1", {
    x: 400,
    opacity: 0,
  });

  tl.from(".cardContainer2", {
    x: 600,
    opacity: 0,
  });

  tl.from(".cardContainer3", {
    x: 800,
    opacity: 0,
  });
</script>
